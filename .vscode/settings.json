{
  "markdown.validate.enabled": true,
  "markdownlint.config": {
    "default": true,
    "MD001": false,
    "MD002": false,
    "MD007": { "indent": 2 },
    "MD013": { "line_length": 100 },
    "MD024": false,
    "MD026": { "punctuation": ".,;:!" },
    "MD029": { "style": "ordered" },
    "MD033": false,
    "MD034": false,
    "MD036": false,
    "no-hard-tabs": true,
    "whitespace": true,
    "MD047": true,
    "MD048": { "style": "backtick" }
  },
  "yaml.format.enable": true,
  "yaml.validate": true,
  "yaml.schemas": {
    "./schemas/talent-development-plan.schema.json": "01-talent-development-plan.md",
    "./schemas/course-syllabi.schema.json": "02-course-syllabi.md",
    "./schemas/teaching-schedule.schema.json": "03-teaching-schedule.md"
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  }
}