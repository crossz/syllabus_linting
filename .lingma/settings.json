{
  "markdown.validate.enabled": true,
  "markdownlint.config": {
    "default": true,
    "MD001": false,
    "MD002": false,
    "MD007": {
      "indent": 2
    },
    "MD013": {
      "line_length": 125
    },
    "MD024": false,
    "MD026": {
      "punctuation": ".,;:!"
    },
    "MD029": {
      "style": "ordered"
    },
    "MD032": false,
    "MD033": false,
    "MD034": false,
    "MD036": false,
    "MD047": true,
    "MD048": {
      "style": "backtick"
    },
    "FM001": true,
    "FM002": true
  },
  "markdownlint.customRules": [
    "./.markdownlint-custom-rules/frontmatter-schema-validation.js",
    "./.markdownlint-custom-rules/frontmatter-field-naming.js"
  ],
  "yaml.format.enable": true,
  "yaml.validate": true,
  "yaml.schemas": {
    "./schemas/talent-development-plan.schema.json": "educational_docs/01-talent-development-plan.md",
    "./schemas/course-syllabi.schema.json": "educational_docs/02-course-syllabi.md",
    "./schemas/teaching-schedule.schema.json": "educational_docs/03-teaching-schedule.md"
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "markdownlint.run": "onType",
  "markdownlint.trace.server": "verbose",
  // ESLint配置
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "markdown"],
  "eslint.workingDirectories": ["./eslint-rules"],
  "eslint.options": {
    "extensions": [".js", ".md"]
  },
  "files.exclude": {
    "logseq/*": true
  }
}